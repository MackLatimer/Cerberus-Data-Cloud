{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Emmons Web",
            "cwd": "emmons_frontend",
            "request": "launch",
            "type": "dart",
            "program": "lib/main.dart",
            "flutterMode": "debug"
        },
        {
            "name": "Cerberus Campaigns Backend",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "cwd": "cerberus_campaigns_backend",
            "args": ["run", "--no-debugger"],
            "env": {
                "FLASK_APP": "run.py",
                "FLASK_ENV": "development"
            },
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "Full Stack Debug",
            "configurations": ["emmons_frontend", "cerberus_campaigns_backend"]
        }
    ]
}